{
  "manifest_version": 2,

  "name": "Emoticon Input",
  "description": "Allow input emoticon in every website",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Emoticon Input"
  },

  "permissions": [
    "activeTab"
  ]
}